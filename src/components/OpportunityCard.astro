---
const {
  title,
  icon: Icon,
  color,
  description,
  skills = [],
  commitment,
} = Astro.props;
---

<div
  class="flex flex-col gap-4 rounded-lg border border-gray-200 bg-white p-6 text-center"
>
  <Icon class="mx-auto h-6 w-6" stroke-width={1.5} color={color} />

  <h3 class="text-primary text-lg font-bold">{title}</h3>

  <p class="text-secondary text-sm">{description}</p>

  {
    skills.length > 0 && (
      <div>
        <p class="text-primary mt-2 mb-[10px] text-base font-semibold tracking-wide">
          Habilidades
        </p>
        <ul class="flex flex-wrap justify-center gap-1">
          {/* @ts-expect-error: skill items have implicit any type */}
          {skills.map((s) => (
            <li class="rounded-4xl bg-[#F3F4F6] px-[10px] py-[2px] text-xs font-semibold text-[#1F2937]">
              {s}
            </li>
          ))}
        </ul>
      </div>
    )
  }

  {
    commitment && (
      <div>
        <p class="text-primary mb-[10px] text-base font-semibold tracking-wide">
          Compromiso
        </p>
        <p class="text-secondary text-sm">{commitment}</p>
      </div>
    )
  }
</div>
