---
const year = new Date().getFullYear();
const data = {
  logo: "/logo.png",
  description:
    "Construir una comunidad de desarrolladores más fuerte a través de la colaboración y el aprendizaje.",
  items: [
    {
      id: 1,
      title: "Comunidad",
      links: [
        {
          id: 1,
          text: "Nosotros",
          url: "/nosotros",
          target: "_self",
        },
        {
          id: 2,
          text: "Equipo",
          url: "/equipo",
          target: "_self",
        },
        {
          id: 3,
          text: "Voluntarios",
          url: "/voluntarios",
          target: "_self",
        },
      ],
    },
    {
      id: 2,
      title: "Eventos",
      links: [
        {
          id: 1,
          text: "Todos los eventos",
          url: "/eventos",
          target: "_self",
        },
        {
          id: 2,
          text: "Patrocinadores",
          url: "/patrocinadores",
          target: "_self",
        },
      ],
    },
    {
      id: 3,
      title: "Conectar",
      links: [
        {
          id: 1,
          text: "Linkedin",
          url: "https://www.linkedin.com/company/gdg-ica",
          target: "_blank",
        },
        {
          id: 2,
          text: "Facebook",
          url: "https://www.facebook.com/gdgica",
          target: "_blank",
        },
        {
          id: 3,
          text: "Instagram",
          url: "https://www.instagram.com/gdgica/",
          target: "_blank",
        },
      ],
    },
  ],
  copyright: `©${year} Google Developer Groups ICA. All rights reserved.`,
};
---

<footer class="bg-primary py-12">
  <div class="mx-auto max-w-[1400px] px-4">
    <div class="flex flex-col gap-8 md:flex-row">
      <div class="basis-1/4">
        <div class="mb-4 flex items-center gap-3">
          <img
            src="/gdg-logo.png"
            alt="Logo del GDG ICA"
            height={32}
            width={32}
            class="rounded-sm"
          />
          <p class="text-lg font-bold text-white">GDG ICA</p>
        </div>
        <p class="text-[#9CA3AF]">{data.description}</p>
      </div>
      {
        data.items.map((item) => (
          <div class="grow">
            <p class="mb-4 text-base font-bold text-white">{item.title}</p>
            <ul class="flex flex-col gap-2">
              {item.links.map((link) => (
                <li>
                  <a
                    class="text-[#9CA3AF]"
                    href={link.url}
                    aria-label={`Enlace a ${link.text}`}
                    target={link.target}
                    rel={link.target === "_blank" ? "noopener noreferrer" : ""}
                  >
                    {link.text}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
    <hr class="my-6 text-[#1F2937]" />
    <div class="flex flex-col items-center justify-between gap-4 md:flex-row">
      <p class="text-center text-[#9CA3AF]">{data.copyright}</p>
      <div class="flex gap-4 text-[#9CA3AF]">
        <a href="/terminos-y-condiciones" class="text-sm underline"
          >Términos y Condiciones</a
        >
        <a href="/politica-de-privacidad" class="text-sm underline"
          >Política de Privacidad</a
        >
      </div>
    </div>
  </div>
</footer>
