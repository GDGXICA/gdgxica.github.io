---
import { Image } from "astro:assets";
import { Clock, MapPin, Users, Coffee } from "@lucide/astro";

interface Track {
  id: string;
  name: string;
  color: string;
  description: string;
}

interface Session {
  id: number;
  title: string;
  name: string;
  image: string;
  role: string;
  type: string;
  startTime: string;
  endTime: string;
  duration: string;
  isKeynote?: boolean;
}

interface Schedule {
  trackSessions: Record<string, Session[]>;
}

interface Props {
  schedule: Schedule;
  tracks: Track[];
}

const { schedule, tracks } = Astro.props;
const trackSessions = schedule.trackSessions;
---

<div class="track-tabs-container">
  <!-- Tabs Header -->
  <div class="relative overflow-x-auto">
    <div
      class="mb-10 flex min-w-max gap-2 border-b-2 border-gray-100 px-1 md:gap-3"
    >
      {
        tracks.map((track, index) => (
          <button
            class={`track-tab-btn group relative rounded-t-lg px-5 py-3.5 text-sm font-semibold transition-all duration-300 hover:bg-gray-50 ${
              index === 0
                ? "text-gray-900"
                : "text-gray-500 hover:text-gray-700"
            }`}
            data-track={track.id}
          >
            <span class="relative z-10 flex items-center gap-2.5">
              <span
                class="h-2 w-2 rounded-full transition-transform duration-300 group-hover:scale-125"
                style={`background-color: ${track.color}`}
              />
              <span class="whitespace-nowrap">{track.name}</span>
            </span>
            <span
              class={`absolute bottom-0 left-0 h-1 w-full rounded-t-md transition-all duration-300 ${index === 0 ? "scale-x-100 opacity-100" : "scale-x-0 opacity-0"}`}
              style={`background-color: ${track.color}`}
            />
          </button>
        ))
      }
    </div>
  </div>

  <div class="track-contents relative">
    {
      tracks.map((track, index) => (
        <div
          id={`track-content-${track.id}`}
          class={`track-content transition-all duration-500 ${index === 0 ? "animate-fadeIn block" : "hidden"}`}
        >
          <div
            class="relative mb-10 overflow-hidden rounded-2xl p-8 text-white shadow-lg"
            style={`background: linear-gradient(135deg, ${track.color} 0%, ${track.color}dd 100%)`}
          >
            <div class="absolute top-0 right-0 -mt-32 -mr-32 h-64 w-64 rounded-full bg-white opacity-5" />
            <div class="absolute bottom-0 left-0 -mb-24 -ml-24 h-48 w-48 rounded-full bg-white opacity-5" />

            <div class="relative z-10">
              <div class="mb-3 flex items-center gap-3">
                <MapPin size={24} class="opacity-90" />
                <h3 class="text-2xl font-bold tracking-tight">{track.name}</h3>
              </div>
              <p class="ml-9 max-w-2xl text-base text-white/90">
                {track.description}
              </p>
            </div>
          </div>

          <div class="relative space-y-6 md:space-y-8">
            {trackSessions[track.id]?.map((session, sessionIndex) => (
              <div class="group relative">
                {sessionIndex !== trackSessions[track.id].length - 1 && (
                  <div class="absolute top-24 bottom-[-2rem] left-4 hidden w-0.5 bg-gradient-to-b from-gray-200 via-gray-100 to-transparent md:left-[7.5rem] md:block" />
                )}

                <div class="flex flex-col items-start gap-4 md:flex-row md:gap-6">
                  <div class="flex flex-shrink-0 items-start gap-4 md:w-32">
                    <div
                      class="hidden h-8 w-8 items-center justify-center rounded-xl shadow-md transition-all duration-300 group-hover:scale-110 group-hover:shadow-lg md:flex"
                      style={`background-color: ${track.color}`}
                    >
                      {session.type === "networking" ? (
                        <Coffee size={16} class="text-white" />
                      ) : session.type === "workshop" ? (
                        <Users size={16} class="text-white" />
                      ) : (
                        <Clock size={16} class="text-white" />
                      )}
                    </div>

                    <div class="flex flex-col">
                      <span class="text-base font-bold text-gray-900">
                        {session.startTime}
                      </span>
                      <span class="text-sm text-gray-500">
                        {session.endTime}
                      </span>
                    </div>
                  </div>

                  <div class="w-full flex-grow">
                    <div
                      class={`relative overflow-hidden rounded-2xl border-2 bg-white p-6 transition-all duration-300 ${
                        session.type === "networking"
                          ? "border-orange-200 hover:border-orange-300 hover:shadow-orange-100"
                          : "border-gray-100 hover:border-gray-200"
                      } hover:-translate-y-1 hover:shadow-xl`}
                    >
                      <div
                        class="absolute top-0 right-0 -mt-16 -mr-16 h-32 w-32 rounded-full opacity-[0.03]"
                        style={`background-color: ${track.color}`}
                      />

                      <div class="relative z-10">
                        <h4 class="mb-3 text-lg leading-snug font-bold text-gray-900 md:text-xl">
                          {session.title}
                        </h4>

                        <div class="mb-4 flex flex-wrap gap-2">
                          <span
                            class="inline-flex items-center rounded-lg px-3 py-1.5 text-xs font-semibold shadow-sm"
                            style={`background-color: ${track.color}15; color: ${track.color}`}
                          >
                            {session.type === "workshop"
                              ? "üõ†Ô∏è Taller"
                              : session.type === "networking"
                                ? "‚òï Networking"
                                : "üé§ Charla"}
                          </span>
                          <span class="inline-flex items-center gap-1.5 rounded-lg bg-gray-100 px-3 py-1.5 text-xs font-semibold text-gray-700">
                            <Clock size={13} />
                            {session.duration}
                          </span>
                        </div>

                        {session.type !== "networking" && (
                          <div class="flex items-center gap-4 border-t-2 border-gray-50 pt-4">
                            <div class="relative">
                              <Image
                                src={session.image || "/placeholder.svg"}
                                alt={session.name}
                                width={48}
                                height={48}
                                class="h-12 w-12 rounded-xl object-cover ring-2 ring-gray-100"
                              />
                              <div
                                class="absolute -right-1 -bottom-1 h-4 w-4 rounded-full border-2 border-white"
                                style={`background-color: ${track.color}`}
                              />
                            </div>
                            <div class="flex-grow">
                              <p class="text-sm font-bold text-gray-900">
                                {session.name}
                              </p>
                              <p class="mt-0.5 line-clamp-1 text-xs text-gray-600">
                                {session.role}
                              </p>
                            </div>
                          </div>
                        )}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fadeIn {
    animation: fadeIn 0.5s ease-out;
  }

  .track-tabs-container {
    @apply relative;
  }

  /* Smooth scrolling for mobile tabs */
  .overflow-x-auto {
    scrollbar-width: thin;
    scrollbar-color: rgba(156, 163, 175, 0.3) transparent;
  }

  .overflow-x-auto::-webkit-scrollbar {
    height: 4px;
  }

  .overflow-x-auto::-webkit-scrollbar-track {
    background: transparent;
  }

  .overflow-x-auto::-webkit-scrollbar-thumb {
    background-color: rgba(156, 163, 175, 0.3);
    border-radius: 20px;
  }
</style>

<script>
  const tabs = document.querySelectorAll(".track-tab-btn");
  const contents = document.querySelectorAll(".track-content");

  tabs.forEach((tab) => {
    tab.addEventListener("click", () => {
      const trackId = (tab as HTMLElement).dataset.track;

      // Update tabs
      tabs.forEach((t) => {
        t.classList.remove("text-gray-900");
        t.classList.add("text-gray-500");
        const indicator = t.querySelector('span[class*="absolute"]');
        if (indicator) {
          indicator.classList.remove("scale-x-100", "opacity-100");
          indicator.classList.add("scale-x-0", "opacity-0");
        }
      });

      tab.classList.remove("text-gray-500");
      tab.classList.add("text-gray-900");
      const activeIndicator = tab.querySelector('span[class*="absolute"]');
      if (activeIndicator) {
        activeIndicator.classList.remove("scale-x-0", "opacity-0");
        activeIndicator.classList.add("scale-x-100", "opacity-100");
      }

      // Update content with animation
      contents.forEach((content) => {
        content.classList.add("hidden");
        content.classList.remove("block", "animate-fadeIn");
      });
      const activeContent = document.getElementById(`track-content-${trackId}`);
      if (activeContent) {
        activeContent.classList.remove("hidden");
        activeContent.classList.add("block");
        // Trigger animation
        setTimeout(() => {
          activeContent.classList.add("animate-fadeIn");
        }, 10);
      }
    });
  });
</script>
